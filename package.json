{
  "name": "deploy-docker-ssh",
  "version": "0.2.6",
  "private": true,
  "description": "Deploys a docker container to a remote host",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --license licenses.txt",
    "test": "jest --passWithNoTests",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iacobfred/deploy-docker-ssh.git"
  },
  "keywords": [
    "Actions",
    "Docker",
    "GitHub",
    "SSH"
  ],
  "author": "Jacob Fredericksen <jacob.t.fredericksen@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iacobfred/deploy-docker-ssh/issues"
  },
  "homepage": "https://github.com/iacobfred/deploy-docker-ssh#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.1",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@jest/types": "^29.0.2",
    "@types/node": "^18.7.15",
    "@typescript-eslint/parser": "^5.36.2",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.6.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
